<Window x:Class="BallAnimation.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ball Animation" Height="400" Width="600">
    <Grid>
        <Canvas x:Name="canvas" Background="White" MouseLeftButtonDown="AddBall" />
        <Button Content="Start Animation" Click="StartAnimation" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,10" />
    </Grid>
</Window>